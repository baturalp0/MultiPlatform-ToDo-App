@model IEnumerable<ToDoMVC.Models.ToDo>

@{
    ViewData["Title"] = "Görevlerim";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-5">
                <i class="bi bi-list-check text-primary"></i> Görevlerim
            </h1>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Yeni Görev Ekle
            </a>
        </div>

        <!-- Arama Formu -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <form asp-action="Index" method="get" class="row g-3">
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text" 
                                   class="form-control form-control-lg" 
                                   name="search" 
                                   placeholder="Görev ara..." 
                                   value="@ViewBag.SearchKeyword">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100 btn-lg">
                            Ara
                        </button>
                    </div>
                </form>
                @if (!string.IsNullOrEmpty(ViewBag.SearchKeyword))
                {
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Aramayı Temizle
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Görev Listesi -->
        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100 shadow-sm @(item.IsCompleted ? "border-success" : "")">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="card-title @(item.IsCompleted ? "text-decoration-line-through text-muted" : "")">
                                        @item.Name
                                    </h5>
                                    @if (item.IsCompleted)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Tamamlandı
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock"></i> Bekliyor
                                        </span>
                                    }
                                </div>
                                
                                <p class="card-text text-muted small">
                                    <i class="bi bi-calendar3"></i> 
                                    @item.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                </p>

                                <!-- Butonlar -->
                                <div class="btn-group w-100" role="group">
                                    <!-- Tamamla/Geri Al -->
                                    <form asp-action="ToggleComplete" asp-route-id="@item.Id" method="post" class="flex-fill">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn @(item.IsCompleted ? "btn-outline-secondary" : "btn-outline-success") w-100">
                                            <i class="bi @(item.IsCompleted ? "bi-arrow-counterclockwise" : "bi-check-circle")"></i>
                                            @(item.IsCompleted ? "Geri Al" : "Tamamla")
                                        </button>
                                    </form>
                                    
                                    <!-- Düzenle -->
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary flex-fill">
                                        <i class="bi bi-pencil"></i> Düzenle
                                    </a>
                                    
                                    <!-- Sil -->
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="flex-fill" 
                                          onsubmit="return confirm('Bu görevi silmek istediğinizden emin misiniz?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger w-100">
                                            <i class="bi bi-trash"></i> Sil
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info shadow-sm text-center" role="alert">
                <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
                <h4 class="alert-heading">Henüz görev yok!</h4>
                <p>Yeni bir görev ekleyerek başlayabilirsiniz.</p>
                <hr>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> İlk Görevi Ekle
                </a>
            </div>
        }
    </div>
</div>
